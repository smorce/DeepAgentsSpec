{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UserProfileUpdate",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "updates": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "value": {
            "type": "string",
            "minLength": 1
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "evidence": {
            "type": "string"
          }
        },
        "required": ["path", "value", "confidence"]
      }
    }
  },
  "required": ["updates"]
}
